@model smartGPS.Areas.Dashboard.Models.FacebookStatisticsModel
@{
    ViewBag.Title = "FacebookProfile";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.LoadData == true)
{
    @Html.Action("FacebookLogin")
}
else
{
    
    <h4>Synchronize your Facebook profile with smartGps</h4><br />
      using (Html.BeginForm("FacebookProfile", "ExternalServices", FormMethod.Post, new { @class = "form-horizontal" }))
      {
           <button class="btn btn-large btn-primary" type="submit">Load data</button>
      }
}
    